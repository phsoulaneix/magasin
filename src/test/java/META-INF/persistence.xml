<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="myPersistenceUnitTest" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.formation.magasin.model.entity.Article</class>
		<class>com.formation.magasin.model.entity.Commande</class>
		<class>com.formation.magasin.model.entity.LigneCommande</class>
		<class>com.formation.magasin.model.entity.Client</class>
		<properties>
		    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		    <property name="hibernate.showSql" value="true" />
		    <property name="hibernate.hbm2ddl.auto" value="create-drop" />
		    <property name="hibernate.connection.autocommit" value="true" />
		</properties>
	</persistence-unit>
</persistence>